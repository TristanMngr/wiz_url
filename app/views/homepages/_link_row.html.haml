%tr{ id: link.id, class: 'link_row' }
  %td= link.url
  %td= link_to display_shorten_url_for(host: request.host, slug: link.slug), short_path(link.slug), target: :_blank, rel: 'noopener'
  %td= link_to 'graphique', link_path(link.id)
  %td= link_to 'delete', link, method: :delete, remote: true, class: 'delete_link'